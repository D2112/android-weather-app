<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="preview_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="BackgroundColor">
        <item name="android:background">#c8000000</item>
    </style>
    <style name="forecast_info_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#c8000000</item>
        <item name="android:layout_span">2</item>
    </style>
    <style name="forecast_info_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/forecast_cell_shape</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>